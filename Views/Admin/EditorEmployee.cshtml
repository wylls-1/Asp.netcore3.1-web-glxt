@model Employee
@{
    ViewData["Title"] = "EditorEmployee";
}

    <div class="mybackground">
        <form asp-controller="admin" asp-action="EditorEmployee" method="post" class="mt-3">

            <div class="form-group row">
                <label  asp-for="EmpId"  class="col-sm-2 col-form-label">员工ID号：</label>
                <div class="col-sm-6">
                    <input  asp-for="EmpId" readonly class="form-control">
                    <span asp-validation-for="EmpId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Name" class="col-sm-2 col-form-label">姓名：</label>
                <div class="col-sm-6">
                    <input asp-for="Name" class="form-control"> 
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="State" class="col-sm-2 col-form-label">工作状态：</label>
                <div class="col-sm-6">
                    <input asp-for="State"  class="form-control">
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="WorkStart" class="col-sm-2 col-form-label">入职时间：</label>
                <div class="col-sm-6">
                    <input asp-for="WorkStart" class="form-control">
                    <span asp-validation-for="WorkStart" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Job" class="col-sm-2 col-form-label">岗位：</label>
                <div class="col-sm-6">
                    <input asp-for="Job" class="form-control">
                    <span asp-validation-for="Job" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Position" class="col-sm-2 col-form-label">职务：</label>
                <div class="col-sm-6">
                    <input asp-for="Position" class="form-control">
                    <span asp-validation-for="Position" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="DepId" class="col-sm-2 col-form-label">部门ID号：</label>
                <div class="col-sm-6">
                    <input asp-for="DepId"  class="form-control">
                    <span asp-validation-for="DepId" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="UserName" class="col-sm-2 col-form-label">登录账号：</label>
                <div class="col-sm-6">
                    <input asp-for="UserName" class="form-control">
                    <span asp-validation-for="UserName" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <label asp-for="Passward" class="col-sm-2 col-form-label">密码：</label>
                <div class="col-sm-6">
                    <input asp-for="Passward" class="form-control">
                    <span asp-validation-for="Passward" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group row">
                <div>
                    <button type="submit" class="btn btn-primary col-auto">修改</button>
                    <a href="@Url.Action("index","admin")" class="btn btn-danger">返回</a>
                </div>
            </div>

        </form>

    </div>
